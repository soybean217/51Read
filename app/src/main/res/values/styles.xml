<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 搜索popupwindow渐变的显示效果 -->
    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Shelf_Pop_Animation">
        <item name="android:windowEnterAnimation">@anim/pop_small_to_big_in</item>
        <item name="android:windowExitAnimation">@anim/pop_big_to_small_out</item>
    </style>

    <!--   	<style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
            <item name="android:button">@drawable/advance_search_cell_checkbox_selector</item>
            <item name="android:paddingLeft">25dp</item>
            <item name="android:maxHeight">10dp</item>
          </style> -->

    <style name="foot_menu_layout">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/foot_menu_back_selector</item>
    </style>

    <style name="foot_menu_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="foot_menu_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="left_menu_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/foot_menu_back_selector</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="left_menu_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="left_menu_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="head_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- 主界面的head menu样式 -->
    <style name="head_menu_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="head_menu_imageview">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


    <!-- 软件推荐的head menu样式 -->
    <style name="soft_head_menu_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="soft_head_menu_imageview">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/gray</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- bookstore页面的head menu 样式 -->
    <style name="bookstore_head_menu_layout">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="bookstore_head_menu_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bookstore_head_menu_imageview">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- bookSetting的样式 -->
    <style name="booksetting_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:background">@drawable/setting_layout_click_selector</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="booksetting_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="booksetting_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!-- togglebutton的style -->
    <style name="set_switch_button">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/readset_togglebutton_selector</item>
        <item name="android:checked">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="about_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:windowAnimationStyle">@style/about_dialog_animation</item>
    </style>

    <style name="about_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/pop_small_to_big_in</item>
        <item name="android:windowExitAnimation">@anim/pop_big_to_small_out</item>
    </style>

    <style name="down_manage_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
    </style>

    <style name="download_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/pop_small_to_big_in</item>
        <item name="android:windowExitAnimation">@anim/pop_big_to_small_out</item>
    </style>

</resources>