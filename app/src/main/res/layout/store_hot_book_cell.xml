<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white">

    <RelativeLayout
            android:id="@+id/rl_bookstore_hot_main"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_orange_selector">

        <com.wanpg.bookread.widget.AsyncImageView
                android:id="@+id/iv_bookstore_hot_cover"
                android:layout_width="45dp"
                android:layout_height="63dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"/>

        <TextView
                android:id="@+id/tv_bookstore_hot_title"
                android:layout_toRightOf="@id/iv_bookstore_hot_cover"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="18dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:text="不败战神"/>

        <TextView
                android:id="@+id/tv_bookstore_hot_author"
                android:layout_toRightOf="@id/iv_bookstore_hot_cover"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_bookstore_hot_title"
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="方想"/>

        <TextView
                android:id="@+id/tv_bookstore_hot_info"
                android:layout_toRightOf="@id/iv_bookstore_hot_cover"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_bookstore_hot_author"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/gray"
                android:lines="2"
                android:textSize="12sp"
                android:text="方想"/>
    </RelativeLayout>
</RelativeLayout>