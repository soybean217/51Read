<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_pop_book_manage_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">

    <LinearLayout
            android:layout_width="200dp"
            android:id="@+id/ll_pop_book_manage_back1"
            android:layout_height="wrap_content"
            android:background="@color/gainsboro"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_pop_book_manage_delete"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_orange_selector"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="删除"/>

        <TextView
                android:id="@+id/tv_pop_book_manage_property"
                android:layout_marginTop="0.5dp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/white_orange_selector"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="属性"/>
    </LinearLayout>


</LinearLayout>