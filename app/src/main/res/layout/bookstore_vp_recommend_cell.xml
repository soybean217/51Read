<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/rl_bookstore_cell_main"
            android:layout_width="fill_parent"
            android:layout_height="80dp"

            android:background="@drawable/setting_layout_click_selector">

        <com.wanpg.bookread.widget.AsyncImageView
                android:id="@+id/iv_bookstore_recommend_cell"
                android:layout_width="45dp"
                android:layout_height="63dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/iv_bookstore_recommend_cell">

            <TextView
                    android:id="@+id/tv_bookstore_recommend_cell_title"
                    android:layout_width="fill_parent"
                    android:layout_height="21dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="有爱，每天都是情人节"/>

            <TextView
                    android:id="@+id/tv_bookstore_recommend_cell_content"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:text="金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸金庸"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>