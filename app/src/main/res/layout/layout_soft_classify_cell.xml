<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/rl_soft_classify_cell"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/white_orange_selector">

        <ImageView
                android:id="@+id/iv_soft_classify_cell"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:src="@drawable/app_00"/>

        <TextView
                android:id="@+id/tv_soft_classify_cell"
                android:layout_toRightOf="@id/iv_soft_classify_cell"
                android:layout_marginLeft="10dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="标题标题"
                android:textColor="@color/black"
                android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>