<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_pop_search_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center">

    <LinearLayout
            android:id="@+id/ll_pop_search_back1"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white">

        <TextView
                android:id="@+id/tv_pop_search_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:text="扫描本地书籍目录"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:background="@color/orange"/>

        <LinearLayout
                android:id="@+id/ll_pop_search_button_back"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical">

            <Button
                    android:id="@+id/b_serarch_all"
                    android:text="自动搜索"
                    android:textSize="13sp"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"/>

            <Button
                    android:id="@+id/b_serarch_advanced"
                    android:text="高级搜索"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"/>
        </LinearLayout>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/orange"/>

        <TextView
                android:id="@+id/tv_pop_search_cancel"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/transparent_orange_selector"
                android:text="取消"/>
    </LinearLayout>


</LinearLayout>