<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="64dp"
              android:orientation="vertical"
              android:background="#181818">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/umeng_common_app"
                android:layout_width="64dp"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:background="#1d3741">

            <ImageView
                    android:id="@+id/umeng_common_appIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            <TextView
                    android:id="@+id/umeng_common_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/umeng_common_app"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/umeng_common_notification_controller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/umeng_common_rich_notification_continue"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@color/transparent"
                        android:singleLine="true"
                        android:textColor="@color/transparent"
                        android:clickable="false"
                        android:textSize="12sp"
                        android:visibility="gone"/>

                <Button
                        android:id="@+id/umeng_common_rich_notification_cancel"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/transparent"
                        android:singleLine="true"
                        android:clickable="false"
                        android:textColor="@color/transparent"
                        android:textSize="12sp"
                        android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/umeng_common_notification"
                    android:layout_toLeftOf="@id/umeng_common_notification_controller"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                <TextView
                        android:id="@+id/umeng_common_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="22222"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/umeng_common_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="222222"
                        android:textSize="11sp"
                        android:textStyle="italic"/>
            </LinearLayout>

            <ProgressBar
                    android:id="@+id/umeng_common_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/download_progressbar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"/>
            <!--             <ProgressBar
                        android:id="@+id/pb_download_progress"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:max="100"
                        android:progress="0"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/download_progressbar"/> -->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>