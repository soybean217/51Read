<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_bookcover_main"
                android:layout_width="fill_parent"
                android:layout_height="100dp">

    <RelativeLayout
            android:id="@+id/rl_bookcover_back"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/shelf_bg">
    </RelativeLayout>

    <ImageView
            android:id="@+id/iv_bookcover"
            android:layout_width="60dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

    <LinearLayout
            android:layout_toRightOf="@+id/iv_bookcover"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_bookname"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="人生sssss"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="17sp"/>

        <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="作者"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/tv_bookintro"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="简介"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>