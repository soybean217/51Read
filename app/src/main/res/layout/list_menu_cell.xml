<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_menu_bar_main"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/menu_list_button_selector"
                android:paddingLeft="7dp">

    <ImageView
            android:id="@+id/iv_menu_bar_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/menu_download"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/tv_menu_bar"
            android:layout_toRightOf="@id/iv_menu_bar_icon"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="17sp"
            android:text="本地图书"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>
</RelativeLayout>