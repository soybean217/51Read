<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_pop_book_property_back"
              android:orientation="vertical"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="@color/white">

    <TextView
            android:id="@+id/tv_pop_poperity_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="属性"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/orange"/>

    <TextView
            android:id="@+id/tv_pop_poperity_path"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="sdcard/ssss/ssss"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    <TextView
            android:id="@+id/tv_pop_poperity_length"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1024k"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    <TextView
            android:id="@+id/tv_pop_poperity_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="2012-12-13 15:14"
            android:textColor="@color/black"
            android:textSize="15sp"/>
</LinearLayout>